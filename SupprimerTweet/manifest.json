{
    "manifest_version": 3,
    "name": "Supprimer tweet",
    "version": "0.1",
    "description": "Extension permettant Ã  un profil twitter de supprimer facilement ses tweet et retweet",
    
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],

    "host_permissions": [
        "https://x.com/*"
    ],

    "action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["https://x.com/*"],
            "js": ["recup_pseudo.js"]
        }
    ]

}