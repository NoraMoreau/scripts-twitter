{
    "manifest_version": 2,
    "name": "Supprimer tweet",
    "version": "0.1",
    "description": "Extension permettant Ã  un profil twitter de supprimer facilement ses tweet et retweet",
    
    "permissions": [
        "https://x.com/*",
        "scripting",
        "storage",
        "tabs"
    ],

    "browser_action": {
        "default_popup": "popup.html"
    },

    "page_action": {
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["https://x.com/*"],
            "js": ["recup_pseudo.js"]
        }
    ]

}